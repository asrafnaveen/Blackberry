<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:orientation="horizontal" android:layout_height="80dip"
             android:gravity="center_vertical" android:id="@+id/customprogressdialog">
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_margin="8dp"
            android:id="@+id/progressSpinner"
            android:layout_centerVertical="true"/>
        <TextView android:id="@+id/progressDialogTitle"
                  android:layout_width="fill_parent" android:layout_height="80dip" android:textSize="16dip"
                  android:gravity="center_vertical" android:text="@string/loading" android:textStyle="normal"
                    android:layout_toRightOf="@id/progressSpinner"
                />

</RelativeLayout>