<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/custom_field_root"
              android:padding="8dip">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                android:layout_weight="1">
        <TextView android:id="@+id/customFieldIsRequired"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14dip"
                  android:gravity="center_vertical" android:text="@string/required" android:textStyle="bold" android:ellipsize="end"
                  android:textColor="@color/ORANGE"/>
        <TextView android:id="@+id/customFieldTitle"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dip"
              android:gravity="center_vertical" android:text="@string/loading" android:ellipsize="end"/>

        </LinearLayout>
        <CheckBox android:layout_height="fill_parent" android:layout_width="wrap_content"
                  android:id="@+id/customFieldCheckbox" android:layout_marginBottom="-8dip"
                android:layout_weight="1" android:paddingRight="36dip" android:layout_marginTop="-8dip"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/singleselectspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <EditText
            android:id="@+id/customFieldText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor ="@color/DARK_TEXT"
            android:gravity="center_vertical"
            android:inputType="text"
            android:background="@drawable/edit_text_holo_light"
            />
    <TextView android:id="@+id/customIsPublic"
              android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="11dip"
              android:gravity="center_vertical" android:text="@string/fieldIsPublic" android:textStyle="normal"
              android:textColor="@color/ORANGE"
            />
    <TextView android:id="@+id/customFieldDescription"
              android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="10dip"
              android:gravity="center_vertical" android:text="Requesting..." android:textStyle="normal"
              android:textColor="@color/GRAY_TEXT"
            />

</LinearLayout>